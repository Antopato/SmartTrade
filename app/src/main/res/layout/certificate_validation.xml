<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CertificateValidationActivity">

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="50dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_button_back"
        android:drawableStart="@drawable/back_arrow"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        >
    </Button>

    <LinearLayout
        android:id="@+id/linearLayoutRequest"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp">

        <TextView
            android:id="@+id/textViewProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProductName"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:layout_gravity="center"
            >
        </TextView>

        <ImageView
            android:id="@+id/imageViewProductImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/carrito"
            android:layout_gravity="center"
            >
        </ImageView>

        <TextView
            android:id="@+id/textViewBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Brand:"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium">
        </TextView>
        <TextView
            android:id="@+id/textViewMaterials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Materials:"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium">
        </TextView>
        <TextView
            android:id="@+id/textViewProduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Production:"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium">
        </TextView>

    </LinearLayout>

    <Button
        android:id="@+id/buttonAccept"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rounded_button"
        android:text="Accept"
        android:textColor="@color/white"
        android:textSize="15sp">

    </Button>

    <Button
        android:id="@+id/buttonDecline"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/red"
        android:text="Decline"
        android:textColor="@color/white"
        android:textSize="15sp">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>